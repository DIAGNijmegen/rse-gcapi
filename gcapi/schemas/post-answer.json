{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "api-link": {
            "type": "string",
            "pattern": "^https?://.*[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/$"
        }
    },

    "type": "object",
    "properties": {
        "question": { "$ref": "#/definitions/api-link" },
        "images": {
            "minItems": 1,
            "items": { "$ref": "#/definitions/api-link" }
        }
    },
    "required": ["images", "question", "answer"]
}
