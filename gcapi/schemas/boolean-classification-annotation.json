{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "boolean-classification-annotation": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/uuid"
                },
                "grader": {
                    "type": "integer",
                    "minimum": 0
                },
                "image": {
                    "$ref": "#/definitions/uuid"
                },
                "created": {
                    "type": "string",
                    "format": "date-time"
                },
                "name": {
                    "type": "string",
                    "maxLength": 255
                },
                "value": {
                    "type": "boolean"
                }
            },
            "required": ["id", "grader", "image", "created", "name", "value"]
        }
     },

    "$ref": "#/definitions/boolean-classification-annotation"
}
