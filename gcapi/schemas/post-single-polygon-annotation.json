{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "single-polygon-annotation": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/uuid"
                },
                "value": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {"type": "number"},
                        "minItems": 2,
                        "maxItems": 2
                    },
                    "minItems": 0
                },
                "z": {
                    "type": ["number", "null"]
                },
                "interpolated": {
                    "type": "boolean"
                }
            }
        }
     },

    "$ref": "#/definitions/single-polygon-annotation"
}
