{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "definitions": {
        "question-generic" : {
            "allOf": [
                { "$ref": "definitions.json#/gc-db-object" },
                {
                    "type": "object",
                    "properties": {
                        "form_direction": { "enum": [ "Vertical", "Horizontal" ] },
                        "question_text": { "type": "string" },
                        "required": { "type": "boolean" },
                        "help_text": { "type": "string" }
                    },
                    "required": ["form_direction", "answer_type", "question_text", "required", "help_text"]
                }
            ]
        },
        "question-simple": {
            "allOf": [
                { "$ref": "#/definitions/question-generic" },
                {
                    "type": "object",
                    "properties": {
                        "answer_type": {
                            "enum": [
                                "Bool",
                                "Single line text",
                                "Multi line text",
                                "Heading"
                            ]
                        }
                    }
                }
            ]
        },
        "question-annotation": {
            "allOf": [
                { "$ref": "#/definitions/question-generic" },
                {
                    "type": "object",
                    "properties": {
                        "answer_type": {
                            "enum": [
                                "2D bounding box",
                                "Distance measurement",
                                "Multiple distance measurements"
                            ]
                        },
                        "image_port" : {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "required": ["image_port", "answer_type"]
                }
            ]
        }
    },

    "type": "object",
    "allOf": [
        { "$ref": "definitions.json#/gc-db-object" },
        {
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "is_valid": {
                    "type": "boolean"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            { "$ref": "#/definitions/question-simple" },
                            { "$ref": "#/definitions/question-annotation" }
                        ]
                    }
                },
                "hanging_list_images": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": { "$ref": "definitions.json#/api-link" }
                    }
                }
            },
            "required": [
                "title",
                "description",
                "is_valid",
                "questions",
                "hanging_list_images"
            ],
            "additionalProperties": true
        }
    ]
}
