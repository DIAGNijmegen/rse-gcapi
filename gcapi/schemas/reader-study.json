{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "definitions": {
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "api-link": {
            "type": "string",
            "pattern": "^https?://.*[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/$"
        },
        "gc-db-object": {
            "type": "object",
            "properties": {
                "pk": {
                    "$ref": "#/definitions/uuid"
                },
                "api_url": {
                    "$ref": "#/definitions/api-link"
                }
            },
            "required": ["pk", "api_url"]
        },
        "question-generic" : {
            "allOf": [
                { "$ref": "#/definitions/gc-db-object" },
                {
                    "type": "object",
                    "properties": {
                        "form_direction": { "enum": [ "Vertical", "Horizontal" ] },
                        "question_text": { "type": "string" },
                        "required": { "type": "boolean" },
                        "help_text": { "type": "string" }
                    },
                    "required": ["form_direction", "answer_type", "question_text", "required", "help_text"]
                }
            ]
        },
        "question-simple": {
            "allOf": [
                { "$ref": "#/definitions/question-generic" },
                {
                    "type": "object",
                    "properties": {
                        "answer_type": {
                            "enum": [
                                "Bool",
                                "Single line text",
                                "Multi line text",
                                "Heading",
                                "Choice",
                                "Number",
                                "Multiple choice",
                                "Multiple choice dropdown"
                            ]
                        }
                    }
                }
            ]
        },
        "question-annotation": {
            "allOf": [
                { "$ref": "#/definitions/question-generic" },
                {
                    "type": "object",
                    "properties": {
                        "answer_type": {
                            "enum": [
                                "2D bounding box",
                                "Multiple 2D bounding boxes",
                                "Distance measurement",
                                "Multiple distance measurements",
                                "Point",
                                "Multiple points",
                                "Polygon",
                                "Multiple polygons",
                                "Mask"
                            ]
                        },
                        "image_port" : {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "required": ["image_port", "answer_type"]
                }
            ]
        }
    },

    "type": "object",
    "allOf": [
        { "$ref": "#/definitions/gc-db-object" },
        {
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "is_valid": {
                    "type": "boolean"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            { "$ref": "#/definitions/question-simple" },
                            { "$ref": "#/definitions/question-annotation" }
                        ]
                    }
                },
                "hanging_list_images": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": { "$ref": "#/definitions/api-link" }
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "title",
                "description",
                "is_valid",
                "questions",
                "hanging_list_images"
            ],
            "additionalProperties": true
        }
    ]
}
