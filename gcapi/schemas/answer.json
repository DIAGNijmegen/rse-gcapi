{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [
        { "$ref": "definitions.json#/gc-db-object" },
        {
            "type": "object",
            "properties": {
                "answer": { "$ref": "definitions.json#/valid-answers" },
                "creator": { "type": "string" },
                "question": { "$ref": "definitions.json#/api-link" },
                "images": {
                    "type": "array",
                    "items": { "$ref": "definitions.json#/api-link" }
                }
            },
            "required": [
                "answer",
                "creator",
                "question",
                "images"
            ]
        }
    ]
}
