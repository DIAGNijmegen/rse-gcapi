{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "api-link": {
            "type": "string",
            "pattern": "^https?://.*[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/$"
        },
        "gc-db-object": {
            "type": "object",
            "properties": {
                "pk": {
                    "$ref": "#/definitions/uuid"
                },
                "api_url": {
                    "$ref": "#/definitions/api-link"
                }
            },
            "required": ["pk", "api_url"]
        },
        "valid-answers": {
            "anyOf": [
                { "type": "boolean" },
                { "type": "string" },
                {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "number"
                            },
                            "required": ["major", "minor"]
                        },
                        "type": { "enum": [ "2D bounding box" ] },
                        "corners": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "items": { "type": "number" },
                                "minItems": 3,
                                "maxItems": 3
                            },
                            "minItems": 4,
                            "maxItems": 4
                        },
                        "name": { "type": "string" }
                    },
                    "required": ["version", "type", "corners"]
                },
                {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "number"
                            },
                            "required": ["major", "minor"]
                        },
                        "type": { "enum": [ "Distance measurement" ] },
                        "name": { "type": "string" },
                        "start": {
                            "type": "array",
                            "items": { "type": "number" },
                            "minItems": 3,
                            "maxItems": 3
                        },
                        "end": {
                            "type": "array",
                            "items": { "type": "number" },
                            "minItems": 3,
                            "maxItems": 3
                        }
                    },
                    "required": ["version", "type", "start", "end"]
                }
            ]
        }
    },

    "allOf": [
        { "$ref": "#/definitions/gc-db-object" },
        {
            "type": "object",
            "properties": {
                "answer": { "$ref": "#/definitions/valid-answers" },
                "creator": { "type": "string" },
                "question": { "$ref": "#/definitions/api-link" },
                "images": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/api-link" }
                }
            },
            "required": [
                "answer",
                "creator",
                "question",
                "images"
            ]
        }
    ]
}
